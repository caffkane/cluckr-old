<%- include("../partials/header") %>
<h1>Create Cluck!</h1>

<div class="row">
    <div class="col-sm-6">
        <form action="/articles" method="POST">
            <%= ` Posting as : ${username} `%>
            <div class="form-group">
                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea class="form-control" id="form-control" rows="3"
                        placeholder="Whatchoo cluckin' 'bout?'"></textarea>
                </div>
                <label for="image_url">Image URL</label>
                <input type="text" class="form-control" id="image_url" placeholder="https://i.imgur.com/qM6KaEy.gifv"
                    placeholder="e.g. Madam Welminster">
            </div>

            <button type="submit" class="btn btn-outline-secondary">Submit</button>
        </form>
    </div>
</div>
<%- include("../partials/footer") %>